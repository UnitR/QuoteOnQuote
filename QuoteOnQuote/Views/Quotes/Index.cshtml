@using Data.Models
@model IEnumerable<Data.Models.Quote>

@{
    ViewBag.Title = "Quote Manager";
}

<link rel="stylesheet" href="~/Content/Manager/BaseManager.css" />
<link rel="stylesheet" href="~/Content/Manager/QuoteIndex.css" />

<body>
<div id="container">
    <h3>Your Quotes</h3>
    <p>
        @Html.ActionLink("Create New", "Create", new {id = "link"})
    </p>
    <table class="table">
        <tr id="header">
            <th>
                @Html.DisplayNameFor(model => model.Origin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Text)
            </th>
            <th></th>
            <th>
                @Html.DisplayName("Score")
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Origin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Text)
                </td>
                <td></td>
                <td id="score">
                    @item.Score
                </td>
                <td id="options">
                    @Html.ActionLink("Edit", "Edit", new {id = item.QuoteId}) |
                    @Html.ActionLink("Details", "Details", new {id = item.QuoteId}) |
                    @Html.ActionLink("Delete", "Delete", new {id = item.QuoteId})
                </td>
            </tr>
        }
    </table>
</div>
</body>
