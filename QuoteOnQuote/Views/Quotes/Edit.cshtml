@model QuoteOnQuote.Models.Quote

@{
    ViewBag.Title = "Edit a Quote";
}

<link rel="stylesheet" href="~/Content/Manager/BaseManager.css"/>
<link rel="stylesheet" href="~/Content/Manager/LargerText.css"/>

<body>
<div id="container">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h3>Edit</h3>
            <h5>Time posted: @Html.DisplayFor(modelItem => Model.DatePosted)</h5>
            @if (Model.DateEdited != null)
            {
                <h6>Last Edited: @Html.DisplayFor(modelItem => Model.DateEdited)</h6>
            }
            <hr/>
            @Html.ValidationSummary(true, "", new {@class = "text-danger"})
            @Html.HiddenFor(model => model.QuoteId)
            @Html.HiddenFor(model => model.DatePosted)
            @Html.HiddenFor(model => model.UserId)

            <div class="form-group">
                @Html.LabelFor(model => model.Origin, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Origin, new {htmlAttributes = new {@class = "form-control enlarge"}})
                    @Html.ValidationMessageFor(model => model.Origin, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.Text, htmlAttributes: new {@class = "control-label col-md-2"})
                <div class="col-md-12">
                    @Html.EditorFor(model => model.Text, new {htmlAttributes = new {@class = "form-control enlarge", id = "quoteText"}})
                    @Html.ValidationMessageFor(model => model.Text, "", new {@class = "text-danger"})
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Save" class="btn btn-default"/>
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>
</body>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
