@using PagedList.Mvc;
@using PagedList;

@model PagedList<QuoteOnQuote.Models.Quote>


@{
    ViewBag.Title = "Contact";
}

<link href="/Content/PagedList.css" rel="stylesheet" type="text/css" />

<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    <link href="@Url.Content("~/Content/Dashboard.css")" rel="stylesheet" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Calligraffitti" rel="stylesheet">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-3.1.1.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script src="~/Scripts/voteUpPost-ajax.js"></script>  
    <script src="~/Scripts/voetDownPost-ajax.js"></script>    

</head>

<!--Sort list is not okay-->
<body>


<div id="dashboard" class="listContainer">
    <ul id="listRow">
        @foreach (var item in Model)
        {
            <li>
                <div id="containerEntry">
                    <div id="originList">
                        @item.Origin
                    </div>

                    <div id="quoteList">
                        @item.Text;
                    </div>
                        
                    <a  onclick="voteUp(@item.QuoteId)"> <div id="voteUp" class="commandList"> + </div></a>
                    <a onclick="voteDown(@item.QuoteId)"> <div id="voteDown" class="commandList"> - </div></a>
                    <div id="containerScore">@item.Score</div>
                        
                      
                </div>
            </li> 
        }
    </ul>
</div>
    @Html.PagedListPager((IPagedList)Model, page => Url.Action("Dashboard", new {page}))
</body>
</html>
